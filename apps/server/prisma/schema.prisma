datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  nickname  String
  xp        Int       @default(0)
  cash      Int       @default(0)
  createdAt DateTime  @default(now())
  characters Character[]
  logs       Log[]
}

model Character {
  id     Int    @id @default(autoincrement())
  name   String
  level  Int    @default(1)
  xp     Int    @default(0)
  gold   Int    @default(0)
  user   User   @relation(fields: [userId], references: [id])
  userId Int
}

model Log {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  action    String
  timestamp DateTime @default(now())
}
