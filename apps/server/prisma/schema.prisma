datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  nickname  String
  xp        Int       @default(0)
  cash      Int       @default(0)
  createdAt DateTime  @default(now())


}


model Log {
  id        Int      @id @default(autoincrement())
  
  userId    Int
  action    String
  timestamp DateTime @default(now())
}

/// --- Character MVP (sem relação com usuário ainda) ---
enum Role {
  tank
  mago
  adc
  suporte
  assassino
  evasivo
}

model Character {
  id          String   @id @default(cuid())
  name        String
  role        Role

  // Atributos base
  hp          Int      @default(7000)
  baseDamage  Int      @default(2000)

  // Progressão
  xp          Int      @default(0)
  gold        Int      @default(0)
  level       Int      @default(1)

  // Metadados
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([role])
  @@index([level])
}
